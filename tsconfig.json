{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@types/*": ["./src/@types/*"],
      "@core/*": ["./src/core/*"],
      "@utils/*": ["./src/core/utils/*"],
      "@storage/*": ["./src/core/storage/*"],
      "@images/*": ["./src/core/assets/images/*"],
      "@routes/*": ["./src/routes/*"],
      "@screens/*": ["./src/screens/*"],
      "@components/*": ["./src/components/*"],
    }
  }
}
